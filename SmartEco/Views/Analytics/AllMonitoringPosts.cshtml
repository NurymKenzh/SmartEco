@model IList<SmartEco.Models.PostData>
@using SmartEco.Controllers
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Http
@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = "AllMonitoringPosts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@SharedLocalizer["AllMonitoringPosts"]</h3>

<div class="row">
    <div class="col-md-4">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model[0].MN)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].DateTimeServer)
                    </th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTimeServer)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>