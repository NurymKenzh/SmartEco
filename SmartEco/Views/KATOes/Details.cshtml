        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Level)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AreaType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AreaType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EgovId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EgovId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParentEgovId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParentEgovId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameKK)
        </dt>
