@model SmartEco.Models.KATO
@using SmartEco.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Delete"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@SharedLocalizer["Delete"]</h1>

<h3>@SharedLocalizer["Delete"]?</h3>
<div>
    <h4>@SharedLocalizer["KATO"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Level)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AreaType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AreaType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EgovId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EgovId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParentEgovId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParentEgovId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameKK)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameKK)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameRU)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameRU)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div hidden="hidden">
            @Html.Editor("CodeSortOrder", null, new { value = ViewBag.CodeSortOrder })
            @Html.Editor("LevelSortOrder", null, new { value = ViewBag.LevelSortOrder })
            @Html.Editor("NameKKSortOrder", null, new { value = ViewBag.NameKKSortOrder })
            @Html.Editor("NameRUSortOrder", null, new { value = ViewBag.NameRUSortOrder })
            @Html.Editor("PageSize", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
            @Html.Editor("PageNumber", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
            @Html.Editor("CodeFilter", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
            @Html.Editor("LevelFilter", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
            @Html.Editor("NameKKFilter", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
            @Html.Editor("NameRUFilter", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
        </div>
        <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-danger" /> |
        @Html.ActionLink(SharedLocalizer["BackToList"], "Index", new { PageNumber = ViewBag.PageNumber, PageSize = ViewBag.PageSize, CodeSortOrder = ViewBag.CodeSortOrder, LevelSortOrder = ViewBag.LevelSortOrder, NameKKSortOrder = ViewBag.NameKKSortOrder, NameRUSortOrder = ViewBag.NameRUSortOrder, CodeFilter = ViewBag.CodeFilter, LevelFilter = ViewBag.LevelFilter, NameKKFilter = ViewBag.NameKKFilter, NameRUFilter = ViewBag.NameRUFilter })
    </form>
</div>