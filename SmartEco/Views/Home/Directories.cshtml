@using SmartEco.Controllers
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Http
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Directories"];
}
@{
    string Role = Context.Session.GetString("Role");
}
@if (Role == "admin" || Role == "moderator")
{
    <a class="btn btn-default" asp-controller="KATOes" asp-action="Index">@SharedLocalizer["KATOes"]</a>
    <hr />
    <a class="btn btn-default" asp-controller="PollutionEnvironments" asp-action="Index">@SharedLocalizer["PollutionEnvironments"]</a>
    <a class="btn btn-default" asp-controller="MeasuredParameterUnits" asp-action="Index">@SharedLocalizer["MeasuredParameterUnits"]</a>
    <a class="btn btn-default" asp-controller="MeasuredParameters" asp-action="Index">@SharedLocalizer["MeasuredParameters"]</a>
    <a class="btn btn-default" asp-controller="DataProviders" asp-action="Index">@SharedLocalizer["DataProviders"]</a>
    <br />
    <br />
    // убрать со временем EcomonMonitoringPoint
    @*<a class="btn btn-default" asp-controller="EcomonMonitoringPoints" asp-action="Index">@SharedLocalizer["EcomonMonitoringPoints"]</a>*@
    <a class="btn btn-default" asp-controller="MonitoringPosts" asp-action="Index">@SharedLocalizer["MonitoringPosts"]</a>
    <a class="btn btn-default" asp-controller="PollutionSources" asp-action="Index">@SharedLocalizer["PollutionSources"]</a>
    <a class="btn btn-default" asp-controller="Projects" asp-action="Index">@SharedLocalizer["Projects"]</a>
    <a class="btn btn-default" asp-controller="TerritoryTypes" asp-action="Index">@SharedLocalizer["TerritoryTypes"]</a>
    <a class="btn btn-default" asp-controller="Targets" asp-action="Index">@SharedLocalizer["Targets"]</a>
    <a class="btn btn-default" asp-controller="Events" asp-action="Index">@SharedLocalizer["Events"]</a>
    <a class="btn btn-default" asp-controller="TargetTerritories" asp-action="Index">@SharedLocalizer["TargetTerritories"]</a>
    <br />
    <br />
    <a class="btn btn-default" asp-controller="TargetValues" asp-action="Index">@SharedLocalizer["TargetValues"]</a>
    <a class="btn btn-default" asp-controller="AActivities" asp-action="Index">@SharedLocalizer["AActivities"]</a>
    <a class="btn btn-default" asp-controller="LEDScreens" asp-action="Index">@SharedLocalizer["LEDScreens"]</a>
}
else if (Role == "KaragandaRegion")
{
    <a class="btn btn-default" asp-controller="MonitoringPosts" asp-action="Index">@SharedLocalizer["MonitoringPosts"]</a>
}
else if (Role == "Arys")
{
    <a class="btn btn-default" asp-controller="MonitoringPosts" asp-action="Index">@SharedLocalizer["MonitoringPosts"]</a>
}
else if (Role == "Almaty")
{
    <a class="btn btn-default" asp-controller="TerritoryTypes" asp-action="Index">@SharedLocalizer["TerritoryTypes"]</a>
    <a class="btn btn-default" asp-controller="Targets" asp-action="Index">@SharedLocalizer["Targets"]</a>
    <a class="btn btn-default" asp-controller="Events" asp-action="Index">@SharedLocalizer["Events"]</a>
    <a class="btn btn-default" asp-controller="TargetTerritories" asp-action="Index">@SharedLocalizer["TargetTerritories"]</a>
    <br />
    <br />
    <a class="btn btn-default" asp-controller="TargetValues" asp-action="Index">@SharedLocalizer["TargetValues"]</a>
    <a class="btn btn-default" asp-controller="AActivities" asp-action="Index">@SharedLocalizer["AActivities"]</a>
}