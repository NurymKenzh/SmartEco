@model SmartEco.Models.MeasuredParameter
@using SmartEco.Controllers
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Http
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Details"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@SharedLocalizer["Details"]</h1>
@{
    string Role = Context.Session.GetString("Role");
}
<div>
    <h4>@SharedLocalizer["MeasuredParameter"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeasuredParameterUnit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeasuredParameterUnit.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MPCDailyAverage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MPCDailyAverage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MPCMaxSingle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MPCMaxSingle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EcomonCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EcomonCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OceanusCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OceanusCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KazhydrometCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KazhydrometCode)
        </dd>
    </dl>
</div>
@if (Role == "admin" || Role == "moderator")
{
    <div>
        @Html.ActionLink(SharedLocalizer["Edit"], "Edit", new { Id = Model.Id, PageNumber = ViewBag.PageNumber, PageSize = ViewBag.PageSize, SortOrder = ViewBag.SortOrder, NameKKFilter = ViewBag.NameKKFilter, NameRUFilter = ViewBag.NameRUFilter, NameENFilter = ViewBag.NameENFilter, EcomonCodeFilter = ViewBag.EcomonCodeFilter, OceanusCodeFilter = ViewBag.OceanusCodeFilter, KazhydrometCodeFilter = ViewBag.KazhydrometCodeFilter }) |
        @Html.ActionLink(SharedLocalizer["BackToList"], "Index", new { PageNumber = ViewBag.PageNumber, PageSize = ViewBag.PageSize, SortOrder = ViewBag.SortOrder, NameKKFilter = ViewBag.NameKKFilter, NameRUFilter = ViewBag.NameRUFilter, NameENFilter = ViewBag.NameENFilter, EcomonCodeFilter = ViewBag.EcomonCodeFilter, OceanusCodeFilter = ViewBag.OceanusCodeFilter, KazhydrometCodeFilter = ViewBag.KazhydrometCodeFilter })
    </div>
}
else
{
    <div>
        @Html.ActionLink(SharedLocalizer["BackToList"], "Index", new { PageNumber = ViewBag.PageNumber, PageSize = ViewBag.PageSize, SortOrder = ViewBag.SortOrder, NameKKFilter = ViewBag.NameKKFilter, NameRUFilter = ViewBag.NameRUFilter, NameENFilter = ViewBag.NameENFilter, EcomonCodeFilter = ViewBag.EcomonCodeFilter, OceanusCodeFilter = ViewBag.OceanusCodeFilter, KazhydrometCodeFilter = ViewBag.KazhydrometCodeFilter })
    </div>
}
