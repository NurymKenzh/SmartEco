@model SmartEco.Models.PlantationsState
@using SmartEco.Controllers
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Http
@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Details"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@SharedLocalizer["Details"]</h1>
@{
    string Role = Context.Session.GetString("Role");
}
<div>
    <h4 id="KazHydrometAirPost">@SharedLocalizer["PlantationsState"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KATO)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KATO.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlantationsStateType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlantationsStateType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TreesNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TreesNumber)
        </dd>
    </dl>
</div>
@if (Role == "admin" || Role == "moderator")
{
    <div>
        @Html.ActionLink(SharedLocalizer["Edit"], "Edit", new { Id = Model.Id, PageNumber = ViewBag.PageNumber, PageSize = ViewBag.PageSize, SortOrder = ViewBag.SortOrder, KATOIdFilter = ViewBag.KATOIdFilter, PlantationsStateTypeIdFilter = ViewBag.PlantationsStateTypeIdFilter })
        @Html.ActionLink(SharedLocalizer["BackToList"], "Index", new { PageNumber = ViewBag.PageNumber, PageSize = ViewBag.PageSize, SortOrder = ViewBag.SortOrder, KATOIdFilter = ViewBag.KATOIdFilter, PlantationsStateTypeIdFilter = ViewBag.PlantationsStateTypeIdFilter })
    </div>
}
else
{
    <div>
        @Html.ActionLink(SharedLocalizer["BackToList"], "Index", new { PageNumber = ViewBag.PageNumber, PageSize = ViewBag.PageSize, SortOrder = ViewBag.SortOrder, KATOIdFilter = ViewBag.KATOIdFilter, PlantationsStateTypeIdFilter = ViewBag.PlantationsStateTypeIdFilter })
    </div>
}