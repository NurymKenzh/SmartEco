@model SmartEco.Models.TreesByObjectTableOfTheBreedStateList
@using SmartEco.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Edit"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@SharedLocalizer["Edit"]</h1>

<h4>@SharedLocalizer["TreesByObjectTableOfTheBreedStateList"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="GreemPlantsPassportId" class="control-label"></label>
                <select asp-for="GreemPlantsPassportId" class="form-control" asp-items="ViewBag.GreemPlantsPassports"></select>
                <span asp-validation-for="GreemPlantsPassportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlantationsTypeId" class="control-label"></label>
                <select asp-for="PlantationsTypeId" class="form-control" asp-items="ViewBag.PlantationsTypes"></select>
                <span asp-validation-for="PlantationsTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StateOfCSR15Type" class="control-label"></label>
                <div class="form-control">
                    @Html.RadioButtonFor(model => model.StateOfCSR15Type, true, new { @name = "StateOfCSR15Type", @onclick = "ChangeStateOfCSR15Type()" }) @SharedLocalizer["StateOfCSR15"]
                    @Html.RadioButtonFor(model => model.StateOfCSR15Type, false, new { @name = "StateOfCSR15Type", @onclick = "ChangeStateOfCSR15Type()" }) @SharedLocalizer["PlantationsType"]
                </div>
                <span asp-validation-for="StateOfCSR15Type" class="text-danger"></span>
            </div>
            <div class="form-group PlantationsType">
                <label asp-for="StateOfCSR15PlantationsTypeId" class="control-label"></label>
                <select asp-for="StateOfCSR15PlantationsTypeId" class="form-control" asp-items="ViewBag.StateOfCSR15PlantationsTypeId"></select>
                <span asp-validation-for="StateOfCSR15PlantationsTypeId" class="text-danger"></span>
            </div>
            <div class="form-group StateOfCSR15">
                <label asp-for="StateOfCSR15_1" class="control-label"></label>
                <input asp-for="StateOfCSR15_1" class="form-control" />
                <span asp-validation-for="StateOfCSR15_1" class="text-danger"></span>
            </div>
            <div class="form-group StateOfCSR15">
                <label asp-for="StateOfCSR15_2" class="control-label"></label>
                <input asp-for="StateOfCSR15_2" class="form-control" />
                <span asp-validation-for="StateOfCSR15_2" class="text-danger"></span>
            </div>
            <div class="form-group StateOfCSR15">
                <label asp-for="StateOfCSR15_3" class="control-label"></label>
                <input asp-for="StateOfCSR15_3" class="form-control" />
                <span asp-validation-for="StateOfCSR15_3" class="text-danger"></span>
            </div>
            <div class="form-group StateOfCSR15">
                <label asp-for="StateOfCSR15_4" class="control-label"></label>
                <input asp-for="StateOfCSR15_4" class="form-control" />
                <span asp-validation-for="StateOfCSR15_4" class="text-danger"></span>
            </div>
            <div class="form-group StateOfCSR15">
                <label asp-for="StateOfCSR15_5" class="control-label"></label>
                <input asp-for="StateOfCSR15_5" class="form-control" />
                <span asp-validation-for="StateOfCSR15_5" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div hidden="hidden">
                @Html.Editor("SortOrder", null, new { value = ViewBag.SortOrder })
                @Html.Editor("PageSize", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
                @Html.Editor("PageNumber", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
                @Html.Editor("GreemPlantsPassportIdFilter", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
                @Html.Editor("PlantationsTypeIdFilter", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
            </div>
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink(SharedLocalizer["BackToList"], "Index", new { PageNumber = ViewBag.PageNumber, PageSize = ViewBag.PageSize, SortOrder = ViewBag.SortOrder, GreemPlantsPassportIdFilter = ViewBag.GreemPlantsPassportIdFilter, PlantationsTypeIdFilter = ViewBag.PlantationsTypeIdFilter })
</div>

<script>
    function ChangeStateOfCSR15Type() {
        if ($("input[name='StateOfCSR15Type']:checked").val() == "True") {
            $('.StateOfCSR15').show();
            $('.PlantationsType').hide();
        }
        else {
            $('.StateOfCSR15').hide();
            $('.PlantationsType').show();
        }
    };

    $(document).ready(function () {
        ChangeStateOfCSR15Type();
    });
</script>