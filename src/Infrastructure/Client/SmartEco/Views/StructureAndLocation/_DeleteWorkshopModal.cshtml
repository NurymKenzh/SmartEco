@model SmartEco.Models.ASM.Workshop
@using SmartEco.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer

<div class="modal-body">
    <div class="modal-header">
        <h5 class="modal-title">Удалить цех</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form id="FormDeleteWorkshop" asp-action="Delete" asp-controller="Workshops" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="workshopId" />
            <input type="hidden" name="EnterpriseId" class="enterpriseId" value="@Model.IndSiteEnterprise.EnterpriseId" />
            <div class="form-group">
                <p>Вы уверены, что хотите удалить цех?</p>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary" form="FormDeleteWorkshop">Да</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
    </div>
</div>