@model SmartEco.Models.ASM.Area
@using SmartEco.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer

<div class="modal-body">
    <div class="modal-header">
        <h5 class="modal-title">Удалить участок</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form id="FormDeleteArea" asp-action="Delete" asp-controller="Areas" method="post">
            <input type="hidden" asp-for="Id" class="areaId" />
            <input type="hidden" asp-for="WorkshopId" class="workshopId" />
            <div class="form-group">
                <p>Вы уверены, что хотите удалить участок?</p>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary" form="FormDeleteArea">Да</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
    </div>
</div>