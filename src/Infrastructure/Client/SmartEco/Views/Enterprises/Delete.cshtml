@model SmartEco.Models.ASM.EnterpriseViewModel
@using SmartEco.Controllers
@using Microsoft.Extensions.Localization
@using SmartEco.Models.ASM.Filsters;
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Delete"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@SharedLocalizer["Delete"]</h1>

<h3>@SharedLocalizer["Delete"]?</h3>
<div>
    <h4>@SharedLocalizer["Enterprise"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Bin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Bin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.KatoId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Kato.KatoComplexName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.EnterpriseTypeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.EnterpriseType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Contacts)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Contacts)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Item.Id" />
        <div hidden="hidden">
            <input asp-for="@Model.Filter.SortOrder" type="hidden" />
            <input asp-for="@Model.Filter.PageSize" type="hidden" />
            <input asp-for="@Model.Filter.PageNumber" type="hidden" />
            <input asp-for="@Model.Filter.BinFilter" type="hidden" />
            <input asp-for="@Model.Filter.NameFilter" type="hidden" />
            <input asp-for="@Model.Filter.KatoComplexFilter" type="hidden" />
            <input asp-for="@Model.Filter.EnterpriseTypeIdFilter" type="hidden" />
        </div>
        <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-danger" /> |
        @Html.ActionLink(SharedLocalizer["BackToList"], "Index", new EnterpriseFilter { PageNumber = Model.Filter.PageNumber, PageSize = Model.Filter.PageSize, SortOrder = Model.Filter.SortOrder,
            BinFilter = Model.Filter.BinFilter, NameFilter = Model.Filter.NameFilter, KatoComplexFilter = Model.Filter.KatoComplexFilter, EnterpriseTypeIdFilter = Model.Filter.EnterpriseTypeIdFilter })
    </form>
</div>