@model SmartEco.Models.ASM.PollutionSources.OperationMode
@using SmartEco.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer

<div class="modal-body">
    <div class="modal-header">
        <h5 class="modal-title">Удалить режим работы</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <p>Вы уверены, что хотите удалить?</p>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-sourceid="@Model.SourceId" value="@Model.Id" onclick="DeleteModeClick($(this));">Да</button>
        <button type="button" class="btn btn-secondary close-btn" data-dismiss="modal">Закрыть</button>
    </div>
</div>