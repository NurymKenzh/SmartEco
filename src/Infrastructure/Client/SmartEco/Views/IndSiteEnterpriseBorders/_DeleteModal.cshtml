@model SmartEco.Models.ASM.IndSiteEnterprise
@using SmartEco.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer

<div class="modal-body">
    <div class="modal-header">
        <h5 class="modal-title">Удалить границу промплощадки</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form asp-action="Delete" id="FormDelete_@Model.IndSiteBorder.Id" asp-controller="IndSiteEnterpriseBorders" method="post">
            <input type="hidden" name="Id" value="@Model.IndSiteBorder.Id" />
            <input type="hidden" name="IndSiteEnterpriseId" value="@Model.IndSiteBorder.IndSiteEnterpriseId" />
            <input type="hidden" name="EnterpriseId" value="@Model.EnterpriseId" />
            <div class="form-group">
                <p>Вы уверены, что хотите удалить границу промплощадки «@Model.IndSiteBorder.Name»?</p>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary" form="FormDelete_@Model.IndSiteBorder.Id">Да</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
    </div>
</div>