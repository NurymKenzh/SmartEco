@model SmartEco.Akimato.Models.Layer
@using SmartEco.Akimato.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Delete"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@SharedLocalizer["Delete"]</h1>

<h3>@SharedLocalizer["Delete"]?</h3>
<div>
    <h4>@SharedLocalizer["Layer"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeoServerWorkspace)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeoServerWorkspace)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeoServerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeoServerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameKK)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameKK)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameRU)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameRU)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameEN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameEN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PollutionEnvironment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PollutionEnvironment.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeasuredParameter)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeasuredParameter.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KATO)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KATO.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Season)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Season)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hour)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div hidden="hidden">
            @Html.Editor("SortOrder", null, new { value = ViewBag.SortOrder })
            @Html.Editor("PageSize", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
            @Html.Editor("PageNumber", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
            @Html.Editor("GeoServerNameFilter", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
            @Html.Editor("NameKKFilter", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
            @Html.Editor("NameRUFilter", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
            @Html.Editor("NameENFilter", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
        </div>
        <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-outline-danger" /> |
        @Html.ActionLink(SharedLocalizer["BackToList"], "Index", new { PageNumber = ViewBag.PageNumber, PageSize = ViewBag.PageSize, SortOrder = ViewBag.SortOrder, GeoServerNameFilter = ViewBag.GeoServerNameFilter, NameKKFilter = ViewBag.NameKKFilter, NameRUFilter = ViewBag.NameRUFilter, NameENFilter = ViewBag.NameENFilter })
    </form>
</div>
